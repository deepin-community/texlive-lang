\qt@newcmd\qurantrans@id@mmmmmmccxv{%
dan kamu lihat manusia masuk agama Allah dengan berbondong-bondong,\qt@no{(2)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxvi{%
maka bertasbihlah dengan memuji Tuhanmu dan mohonlah ampun kepada-Nya. Sesungguhnya Dia adalah Maha Penerima taubat.\qt@no{(3)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxvii{%
\basmalahid Binasalah kedua tangan Abu Lahab dan sesungguhnya dia akan binasa.\qt@no{(1)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxviii{%
Tidaklah berfaedah kepadanya harta bendanya dan apa yang ia usahakan.\qt@no{(2)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxix{%
Kelak dia akan masuk ke dalam api yang bergejolak.\qt@no{(3)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxx{%
Dan (begitu pula) istrinya, pembawa kayu bakar.\qt@no{(4)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxi{%
Yang di lehernya ada tali dari sabut.\qt@no{(5)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxii{%
\basmalahid Katakanlah: ``Dialah Allah, Yang Maha Esa.\qt@no{(1)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxiii{%
Allah adalah Tuhan yang bergantung kepada-Nya segala sesuatu.\qt@no{(2)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxiv{%
Dia tiada beranak dan tidak pula diperanakkan,\qt@no{(3)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxv{%
dan tidak ada seorangpun yang setara dengan Dia".\qt@no{(4)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxvi{%
\basmalahid Katakanlah: ``Aku berlindung kepada Tuhan Yang Menguasai subuh,\qt@no{(1)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxvii{%
dari kejahatan makhluk-Nya,\qt@no{(2)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxviii{%
dan dari kejahatan malam apabila telah gelap gulita,\qt@no{(3)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxix{%
dan dari kejahatan wanita-wanita tukang sihir yang menghembus pada buhul-buhul,\qt@no{(4)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxx{%
dan dari kejahatan pendengki bila ia dengki".\qt@no{(5)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxxi{%
\basmalahid Katakanlah: ``Aku berlindung kepada Tuhan (yang memelihara dan menguasai) manusia.\qt@no{(1)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxxii{%
Raja manusia.\qt@no{(2)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxxiii{%
Sembahan manusia.\qt@no{(3)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxxiv{%
Dari kejahatan (bisikan) syaitan yang biasa bersembunyi,\qt@no{(4)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxxv{%
yang membisikkan (kejahatan) ke dalam dada manusia,\qt@no{(5)}}%
\qt@newcmd\qurantrans@id@mmmmmmccxxxvi{%
dari (golongan) jin dan manusia.\qt@no{(6)}}%
